{
  "name": "CV-Tailor",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Tailor your resume and generate cover letters for job applications",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon16.svg",
    "128": "icons/icon16.svg"
  },
  "action": {
    "default_title": "CV-Tailor",
    "default_icon": {
      "16": "icons/icon16.svg",
      "48": "icons/icon16.svg",
      "128": "icons/icon16.svg"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["sidePanel", "storage", "activeTab", "tabs", "scripting"],
  "host_permissions": [
    "<all_urls>",
    "http://localhost:11434/*",
    "https://api.groq.com/*",
    "https://generativelanguage.googleapis.com/*"
  ]
}
